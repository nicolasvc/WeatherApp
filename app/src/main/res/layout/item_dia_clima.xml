<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    android:orientation="horizontal">


    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:background="@color/colorclimadia"
        android:layout_height="wrap_content">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            app:flexDirection="column"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_flexBasisPercent="100%"
            android:layout_height="wrap_content">


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                app:alignItems="baseline"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvdiaclima"
                    android:layout_width="wrap_content"
                    app:layout_flexBasisPercent="20%"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Dia clima" />

                <TextView
                    android:id="@+id/tvdiasemanaclima"
                    android:layout_width="wrap_content"
                    app:layout_flexBasisPercent="20%"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="Dia clima" />

                <ImageView
                    android:contentDescription="@string/estado_clima"
                    android:id="@+id/ivestadoclima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_flexBasisPercent="20%"
                    android:foregroundGravity="center"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_cloud" />

                <TextView
                    android:id="@+id/tvtipoclima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_flexBasisPercent="20%"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginEnd="5dp"
                    android:text="Dia clima" />

                <TextView
                    android:id="@+id/temperaturalmaxmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexBasisPercent="20%"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="5dp"
                    android:text="Dia clima" />

            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</androidx.cardview.widget.CardView>